@using Triade.Models
@model List<Produtos>
@{
    ViewData["Title"] = "Requisições";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    .swal-wide{
    width:850px !important;
}
</style>
<br />
<div class="border backgroundWhite col-16" style="padding:20px;">
    <div class="row">
        <div class="col-6">
            <h2 class="text-primary">Requisições</h2>
        </div>
    </div>
    
    <br />
    <br />
    <table border="0" cellspacing="5" cellpadding="5">
        <tbody>
            <tr>
                <td>Data minima:</td>
                <td><input type="text" id="min" name="min" class="form-control"></td>
                &nbsp;
                &nbsp;
                <td>Data maxima:</td>
                <td><input type="text" id="max" name="max" class="form-control"></td>
            </tr>
        </tbody>
    </table>
      <br />
    <table id="tblDataRequisitados" class="table table-striped table-bordered" style="width:100%">
        <thead>
            <tr>
                <th>QTD Requisitada</th>
                <th>Nome Produto</th>
                <th>Preço Venda</th>
                <th>Data Requisitada</th>
                <th>Sub Total</th>                
                <th>Ações</th>
            </tr>
        </thead>
        <tbody>
        </tbody>
    </table>
</div>

<div id="modalRetirada" class="modal fade" data-backdrop="static" data-keyboard="false" tabindex="-1" role="dialog" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title" style="text-align:center;" id="title_Produto"> </h4>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                  <span aria-hidden="true">&times;</span>
                </button>
            </div>

            <div class="modal-body">                
                <div class="center-margin">
                    <div class="row"> 
                        <form method="post" asp-action="RetirarProduto">
                            <div class="row px-2 mx-2 backgroundWhite border">
                                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                                <div class="col-12" style="padding:20px;">
                                    <br />
                                    <br />
                                    <div class="form-group row">
                                        <div class="col-4">
                                            <label for="PrecoCusto">Preço Custo </label>
                                        </div>
                                        <div class="col-8">
                                            <input readonly="readonly" id="PrecoCusto" class="form-control" value="" />
                                        </div>
                                    </div>
                                    <br />
                                    <div class="form-group row">
                                        <div class="col-4">
                                            <label for="PrecoVenda">Preço Venda </label>
                                        </div>
                                        <div class="col-8">
                                            <input readonly="readonly" id="PrecoVenda" class="form-control" value="" />
                                        </div>
                                    </div>
                                    <br />
                                    <div class="form-group row">
                                        <div class="col-4">
                                            <label for="Qtdproduto">Qtd Produto </label>
                                        </div>
                                        <div class="col-8">
                                            <input readonly="readonly" id="Qtdproduto" class="form-control" value="" />
                                        </div>
                                    </div>
                                    <br />
                                    <div class="form-group row">
                                        <div class="col-4">
                                            <label for="QtdRetirar">Qtd Retirar </label>
                                        </div>
                                        <div class="col-8">
                                            <input type="number" id="QtdRetirar" class="form-control" value="" />
                                        </div>
                                    </div>
                                    <br />
                                    <br />
                                </div>
                            </div>
                            <br />
                            <div class="centralize">                                
                                <button type="submit" id="submit" class="btn btn-primary" style="float:right">Retirar</button>
                                <button class="btn bg-white" style="float:right"  data-dismiss="modal" aria-label="Close" >Voltar</button>
                            </div>
                        </form>    
                    </div>
                </div>                
            </div>
        </div>
    </div>
</div>

@section scripts{
    <script src="~/js/requisicoes.js"></script>

    <script>
        $('form').submit(function (e) {
        $('#submit').prop("disabled", true);
        e.preventDefault();
        var id = model.id;
        var nome = model.nomeProduto;
        var custo = model.precoCusto;
        var venda = model.precoVenda;
        var qtdprod = model.qtdproduto;
        var qtdreti = $("#QtdRetirar").val();

        $.ajax({
            url: '@Url.Action("RetirarProduto", "Relatorios")',
            type: 'Post',
            dataType: 'json',
            data: { Id: id, NomeProduto: nome, PrecoCusto: custo, PrecoVenda: venda, Qtdproduto: qtdprod, QtdRequisitadaOuRetirada: qtdreti },
            success: function (data) {
                if (data != null && data.success) {
                    swal({
                        title: "Quantidade Retirada do Estoque!",
                        text: qtdreti + " unidades retiradas do produto " + nome,
                        icon: "success",
                        confirmButtonClass: "btn-primary",
                        closeOnConfirm:false
                    },
                     function(isConfirm){
                        if (isConfirm) {
                            location.reload();
                        }
                     });                    
                }
                else {
                    swal("Falha ao atualizar!", data.message, "error");
                    console.log(model);
                }
            },
            error: function (data) {
                swal("Falha ao atualizar!", data.message, "error");
                console.log(model);
            }
        });
    });
    </script>
}